@model Group17_MVC.NguoiDung
@{
    ViewBag.Title = "Cập nhật người dùng";
   
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="@Url.Action("Index", "Admin")">Trang chủ</a>
        </li>
      
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật người dùng</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật người dùng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhật thông tin người dùng</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Quanlinguoidung", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)

                <div class="form-group">
                    <label for="MaNguoiDung">Mã người dùng</label>
                    @Html.TextBoxFor(x => x.MaNguoiDung, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="HoTen">Tên người dùng</label>
                    @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="SoDienThoai">Số điện thoại</label>
                    @Html.TextBoxFor(x => x.SoDienThoai, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="DiaChi">Địa chỉ</label>
                    @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label for="VaiTro">Vai trò</label>
                    @Html.DropDownListFor(x => x.VaiTro, (IEnumerable<SelectListItem>)ViewBag.VaiTroList, new { @class = "form-control" })
                </div>

                <div class="form-group">
                   <a href="@Url.Action("Index", "Quanlinguoidung")" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Cập nhật vai trò</button>
                </div>
            }
        </div>
    </div>
</section>
